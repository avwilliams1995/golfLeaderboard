{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "src/app/api/scraper/route.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["scripts/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/scraper",
      "dest": "/api/scraper/route.ts"
    }
  ],
  "installCommand": "pip install -r scripts/requirements.txt && npm install"
}
